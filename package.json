{
  "name": "codesandpit",
  "version": "0.0.0",
  "description": "A plugin written in vanilla JavaScript that can demonstrate, edit, and run HTML, CSS, and JavaScript code snippets",
  "main": "dist/js/codesandpit.js",
  "module": "dist/js/codesandpit.esm.js",
  "browser": "dist/js/codesandpit.min.js",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "prettier": "prettier --config prettier.config.mjs  src/{scss,js}/**/*.{js,scss} --check --cache --cache-location .cache/.prettiercache",
    "prettier:fix": "prettier --config prettier.config.mjs src/{scss,js}/**/*.{js,scss} --write",
    "stylelint": "stylelint --config stylelint.config.mjs src/scss/**/*.scss --cache --cache-location .cache/.stylelintcache",
    "stylelint:fix": "stylelint --config stylelint.config.mjs src/scss/**/*.scss --fix",
    "css:compile": "sass --style expanded --source-map --embed-sources --no-error-css src/scss:dist/css",
    "css:prefix": "postcss --config postcss.config.mjs --replace \"dist/css/*.css\"  \"!dist/css*.min.css\"",
    "css:min": "cleancss -O1  --format breakWith=lf --with-rebase  --source-map --source-map-inline-sources --output dist/css/ --batch --batch-suffix \".min\" \"dist/css/*.css\" \"!dist/css/*.min.css\"",
    "css:banner": "node build/banner-builder.mjs dist/css/*.css",
    "css": "run-s css:*",
    "eslint": "cross-env ESLINT_USE_FLAT_CONFIG=true eslint --config eslint.config.mjs src/js/**/*.js --cache --cache-location .cache/.eslintcache --report-unused-disable-directives",
    "eslint:fix": "cross-env ESLINT_USE_FLAT_CONFIG=true eslint --config eslint.config.mjs src/js/**/*.js  --fix",
    "js:base": "rollup --config rollup.config.mjs",
    "js:prod": "cross-env NODE_ENV=production rollup --config rollup.config.mjs",
    "lint": "run-p prettier stylelint eslint",
    "fix": "run-p *:fix",
    "clean": "rimraf dist",
    "commitlint": "commitlint --config commitlint.config.mjs -e -V",
    "prepare": "husky || true",
    "serve": "node build/serve.mjs",
    "docs:dev": "vitepress dev src/docs",
    "docs:build": "vitepress build src/docs",
    "docs:preview": "vitepress preview src/docs",
    "build": "run-s lint clean && run-p css js:*",
    "release": "commit-and-tag-version --header \"# 更新日志\" --releaseCommitMessageFormat \"release: {{currentTag}}\""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ajiho/codesandpit"
  },
  "keywords": [
    "codepen",
    "codesandpit",
    "codesandbox"
  ],
  "homepage": "https://github.com/ajiho/codesandpit",
  "author": "ajiho",
  "license": "MIT(https://github.com/ajiho/codesandpit/blob/master/LICENSE)",
  "devDependencies": {
    "@babel/core": "^7.24.3",
    "@babel/preset-env": "^7.24.3",
    "@codemirror/autocomplete": "^6.15.0",
    "@codemirror/commands": "^6.3.3",
    "@codemirror/lang-css": "^6.2.1",
    "@codemirror/lang-html": "^6.4.8",
    "@codemirror/lang-javascript": "^6.2.2",
    "@codemirror/lang-json": "^6.0.1",
    "@codemirror/state": "^6.4.1",
    "@codemirror/theme-one-dark": "^6.1.2",
    "@codemirror/view": "^6.26.1",
    "@commitlint/cli": "^19.2.1",
    "@commitlint/config-conventional": "^19.1.0",
    "@emmetio/codemirror6-plugin": "^0.3.0",
    "@eslint/js": "^8.57.0",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@uiw/codemirror-theme-dracula": "^4.21.20",
    "autoprefixer": "^10.4.19",
    "browser-sync": "^3.0.2",
    "clean-css-cli": "^5.6.3",
    "codemirror": "^6.0.1",
    "commit-and-tag-version": "^12.2.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "fs-extra": "^11.2.0",
    "glob": "^10.3.12",
    "globals": "^15.0.0",
    "husky": "^9.0.11",
    "npm-run-all2": "^6.1.2",
    "overlayscrollbars": "^2.7.1",
    "postcss": "^8.4.38",
    "postcss-cli": "^11.0.0",
    "postcss-strip-comments": "^1.1.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "rollup": "^4.13.2",
    "rollup-plugin-strip-banner": "^3.1.0",
    "sass": "^1.72.0",
    "stylelint": "^16.3.1",
    "stylelint-config-recess-order": "^5.0.0",
    "stylelint-config-standard-scss": "^13.0.0",
    "tua-body-scroll-lock": "^1.5.0",
    "umbrellajs": "^3.3.2",
    "vitepress": "^1.0.1",
    "vitepress-plugin-tabs": "^0.5.0"
  }
}
